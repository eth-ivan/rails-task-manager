<h1>Edit a task</h1>
      <%= simple_form_for(@task) do |f| %>
        <%= f.input :title %>
        <%= f.input :details %>
        <%= f.input :completed, :as => :boolean %>
        <%= f.button :submit, class: "btn btn-primary mb" %>
      <% end %>
  <%= link_to "Back to the list", tasks_path, class: "" %>
