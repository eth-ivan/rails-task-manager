<h1>Task details</h1>

<div class="card p-4">
  <h3 class="card-title"><%= @task.title %></h2>
  <p class="card-text"><%= @task.details %></p>
  <div>
    <% if @task.completed %>
      <i class="fa fa-check-square-o"></i><span class="text-success ml-2">Task completed</span>
    <% else %>
      <i class="fa fa-square-o"></i><span class="text-danger ml-2">Task not completed</span>
    <% end %>
  </div>
</div>

<div class="d-flex flex-row mt-4">
  <div>
    <a href="<%= edit_task_path %>" class="btn btn-outline-primary" role="button">Edit this task</a>
  </div>
  <div class="ml-3">
    <a href="<%= tasks_path %>" class="btn btn-outline-primary" role="button">Back to the list</a>
  </div>
</div>
